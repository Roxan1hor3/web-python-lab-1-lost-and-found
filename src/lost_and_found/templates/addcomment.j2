{% extends 'base.j2' %}
{% block content %}
<div class="form-container">
    <h1>Додавання коментаря</h1>
       <form action="{{ url_for('add_comment', post_id=post_id) }}" method="post">

        <div class="form-group">
            <label for="comment_text">Текст коментаря:</label>
            <textarea id="comment_text" name="comment_text" required></textarea>
        </div>

        <div class="form-group">
            <input class="form-submit" type="submit" value="Додати">
        </div>
    </form>

</div>

{% endblock %}
