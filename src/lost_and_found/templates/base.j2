<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link type="text/css" href="{{ url_for('static', path='/styles.css') }}" rel="stylesheet">
  <title>{{ page_title }}</title>
</head>
<body>

    <div class="menu">
        <a href="{{ url_for('home') }}">Головна</a>
        <a href="{{ url_for('get_contacts') }}">Про нас</a>
        <a href="{{ url_for('get_post_list') }}">Знахідки</a>
        {% if is_authenticated %}
        <a href="{{ url_for('logout') }}">Вийти з аккаунту: {{ user.username }}</a>
        <a href="{{ url_for('add_post') }}">Опублікувати</a>
        {% else %}
        <a href="{{ url_for('register') }}">Реєстрація</a>
        <a href="{{ url_for('login') }}">Логін</a>
        {% endif %}


    </div>

  {% block content %}
  {% endblock %}

</body>
</html>
