{% extends 'base.j2' %}
{% block content %}
<div class="authors-list">
    <h2>Студенти группи 15 які зробили</h2>
    <ul>
    {% for author in authors %}
      <li>
        <span class="author-name">{{ author.name }}</span>
      </li>
    {% endfor %}
    </ul>
  </div>
  <div class="form-container">

    <h1>Залишити коментар</h1>
    <form action="{{ url_for('get_contacts') }}" method="post">
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="text">Текст:</label>
            <textarea id="text" name="text" rows="4" cols="50" required></textarea>
        </div>
        <div class="form-group">
            <input class="form-submit" type="submit" value="Відправити">
        </div>
    </form>

  </div>

{% endblock %}
